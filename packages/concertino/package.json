{
  "name": "@accordproject/concertino",
  "version": "4.0.0-alpha.1",
  "description": "Object-centric serialization of Concerto models",
  "homepage": "https://github.com/accordproject/concerto",
  "engines": {
    "node": ">=18",
    "npm": ">=10"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm-run-all clean generate-types",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cp -R src/spec/*.json dist/spec/",
    "pretest": "#npm-run-all lint",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate-types": "node scripts/generateTypes.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/accordproject/concerto.git",
    "directory": "packages/concertino"
  },
  "keywords": [
    "concerto",
    "tools",
    "modeling"
  ],
  "author": "accordproject.org",
  "license": "Apache-2.0",
  "dependencies": {
    "@accordproject/concerto-core": "4.0.0-alpha.1",
    "@accordproject/concerto-metamodel": "4.0.0-alpha.1",
    "ajv": "^8.17.1",
    "semver": "7.6.3"
  },
  "devDependencies": {
    "@accordproject/concerto-codegen": "^3.22.0",
    "@accordproject/concerto-cto": "4.0.0-alpha.1",
    "@accordproject/concerto-util": "4.0.0-alpha.1",
    "@types/semver": "7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "8.57.1",
    "npm-run-all": "4.1.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
