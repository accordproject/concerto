{
  "name": "@accordproject/concerto-cli",
  "version": "0.80.0",
  "description": "A command-line utility for working with Concerto model files",
  "homepage": "https://github.com/accordproject/concerto#readme",
  "license": "Apache-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/accordproject/concerto.git"
  },
  "scripts": {
    "test": "mocha --recursive -t 10000"
  },
  "bugs": {
    "url": "https://github.com/accordproject/concerto/issues"
  },
  "devDependencies": {
    "@accordproject/concerto-tools": "^0.80.0",
    "ajv": "6.5.4",
    "babel-preset-latest": "6.24.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-things": "0.2.0",
    "eslint": "5.8.0",
    "jsdoc": "3.6.2",
    "license-check-and-add": "2.3.6",
    "mocha": "5.2.0",
    "mockery": "2.1.0",
    "moment-mini": "2.22.1",
    "moxios": "0.4.0",
    "node-plantuml": "0.7.0",
    "nunjucks": "3.1.3",
    "nyc": "14.1.1",
    "pegjs": "0.10.0",
    "sinon": "2.3.8",
    "sinon-chai": "3.2.0",
    "tmp-promise": "1.0.5"
  },
  "dependencies": {
    "@accordproject/concerto": "0.80.0",
    "debug": "4.1.0",
    "mkdirp": "0.5.1",
    "yargs": "13.2.2"
  },
  "license-check-and-add-config": {
    "folder": "./lib",
    "license": "HEADER",
    "exact_paths_method": "EXCLUDE",
    "exact_paths": [
      "api.txt",
      "composer-logs",
      "coverage",
      "index.d.ts",
      "./system",
      "./introspect/parser.js",
      "LICENSE",
      "node_modules",
      ".nyc-output",
      "out",
      ".tern-project"
    ],
    "file_type_method": "EXCLUDE",
    "file_types": [
      ".yml",
      ".yaml",
      ".zip",
      ".tgz"
    ],
    "insert_license": false,
    "license_formats": {
      "js|njk|pegjs|cto|acl|qry": {
        "prepend": "/*",
        "append": " */",
        "eachLine": {
          "prepend": " * "
        }
      },
      "npmrc|editorconfig|txt": {
        "eachLine": {
          "prepend": "# "
        }
      },
      "md": {
        "file": "./HEADER.md"
      }
    }
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "index.js",
      "cli.js",
      "webpack.config.js",
      "lib/codegen/codegen.js",
      "lib/codegen/parsejs.js",
      "lib/codegen/javascriptparser.js",
      "lib/introspect/parser.js",
      "out/**",
      "scripts/**",
      "systest/**",
      "test/**",
      "umd/**"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
